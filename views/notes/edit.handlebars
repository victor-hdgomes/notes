<a href="/">Voltar</a>
<h2>Editando a nota: {{note.title}}</h2>
<form action="/notes/update" method="post">
    <input type="hidden" name="id" id="id" value="{{note._id}}">
    <div class="mb-3">
        <label for="title" class="form-label">Título:</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="O que você pretende fazer?" value="{{note.title}}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descrição:</label>
        <textarea class="form-control" name="description" id="description" placeholder="Descreva melhor essa nota...">{{note.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Editar nota</button>
</form>